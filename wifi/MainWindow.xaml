        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ssid_field" HorizontalAlignment="Left" Height="30" Margin="71,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" BorderBrush="#FF878EA2"/>
        <Label x:Name="label_heslo" Content="HESLO:" HorizontalAlignment="Left" Margin="10,71,0,0" Width="56" Foreground="White" Height="30" VerticalAlignment="Top"/>
        <Label x:Name="ssid_label" Content="SSID:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Height="30" Width="56" Foreground="White"/>
        <Button x:Name="makeWifi" Content="Vytvoriť WIFI" HorizontalAlignment="Left" Margin="323,30,0,0" Width="85" Click="button_Click" Foreground="White" RenderTransformOrigin="0.5,0.5" BorderThickness="1" ToolTip="" Background="{x:Null}" BorderBrush="White" Height="71" VerticalAlignment="Top"/>
        <Label Content="Pre vytvorenie bezdrôtovej siete zadate SSID a HESLO:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="300" Foreground="White"/>
