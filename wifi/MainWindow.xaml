        <Button x:Name="button_shutdown" Content="Nastaviť vypnutie" HorizontalAlignment="Left" Margin="10,164,0,0" VerticalAlignment="Top" Width="118" Click="button_shutdown_Click" Height="41" Background="{x:Null}" BorderBrush="White" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="168,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="password_field" HorizontalAlignment="Left" Height="30" Margin="71,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" BorderBrush="#FF878EA2"/>

    </Grid>
</Window>
